<!-- Cabeçalho do Dashboard -->
<div class="row mb-4">
  <div class="col-12">
    <h2 class="fw-bold">
      <i class="fas fa-chart-line me-2 text-primary"></i>Dashboard
    </h2>
    <p class="text-muted">Bem-vindo ao sistema de gestão de chamados.</p>
  </div>
</div>

<!-- Cartões de Estatísticas Principais -->
<div class="row g-4 mb-5">
  <div class="col-md-3">
    <div
      class="card bg-primary text-white h-100 border-0 shadow-sm position-relative overflow-hidden"
    >
      <div class="card-body">
        <h6 class="text-uppercase small fw-bold opacity-75">Total de Chamados</h6>
        <h2 class="display-6 fw-bold mb-0">{{stats.total}}</h2>
        <i
          class="fas fa-ticket-alt position-absolute end-0 bottom-0 m-3 opacity-25 fa-3x"
        ></i>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div
      class="card bg-warning text-dark h-100 border-0 shadow-sm position-relative overflow-hidden"
    >
      <div class="card-body">
        <h6 class="text-uppercase small fw-bold opacity-75">Em Aberto</h6>
        <h2 class="display-6 fw-bold mb-0">{{stats.abertos}}</h2>
        <i
          class="fas fa-folder-open position-absolute end-0 bottom-0 m-3 opacity-25 fa-3x"
        ></i>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div
      class="card bg-info text-white h-100 border-0 shadow-sm position-relative overflow-hidden"
    >
      <div class="card-body">
        <h6 class="text-uppercase small fw-bold opacity-75">Em Atendimento</h6>
        <h2 class="display-6 fw-bold mb-0">{{stats.emAtendimento}}</h2>
        <i
          class="fas fa-spinner position-absolute end-0 bottom-0 m-3 opacity-25 fa-3x"
        ></i>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div
      class="card bg-success text-white h-100 border-0 shadow-sm position-relative overflow-hidden"
    >
      <div class="card-body">
        <h6 class="text-uppercase small fw-bold opacity-75">Concluídos</h6>
        <h2 class="display-6 fw-bold mb-0">{{stats.concluidos}}</h2>
        <i
          class="fas fa-check-double position-absolute end-0 bottom-0 m-3 opacity-25 fa-3x"
        ></i>
      </div>
    </div>
  </div>
</div>

<div class="row g-4">
  <!-- Tabela de Últimos Chamados -->
  <div class="col-lg-8">
    <div class="card h-100 border-0 shadow-sm">
      <div
        class="card-header bg-white py-3 d-flex justify-content-between align-items-center"
      >
        <h5 class="mb-0 fw-bold text-dark">Últimos Chamados</h5>
        <a href="/chamados" class="btn btn-sm btn-outline-primary px-3">Ver
          todos</a>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="ps-4">Título</th>
                <th>Setor</th>
                <th>Status</th>
                <th class="text-end pe-4">Ação</th>
              </tr>
            </thead>
            <tbody>
              {{#each ultimosChamados}}
                <tr>
                  <td class="ps-4">
                    <div class="fw-bold text-dark">{{this.titulo}}</div>
                    <small class="text-muted">{{this.cliente.nome}}</small>
                  </td>
                  <td>{{this.setor.nome}}</td>
                  <td>
                    {{#if (eq this.status "aberto")}}
                      <span class="badge bg-warning text-dark">Aberto</span>
                    {{else if (eq this.status "em_atendimento")}}
                      <span class="badge bg-info">Atendimento</span>
                    {{else}}
                      <span class="badge bg-success">Concluído</span>
                    {{/if}}
                  </td>
                  <td class="text-end pe-4">
                    <a
                      href="/chamados/editar/{{this.id}}"
                      class="btn btn-sm btn-light border"
                      title="Ver Detalhes"
                    >
                      <i class="fas fa-eye text-primary"></i>
                    </a>
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan="4" class="text-center py-5 text-muted">
                    <i class="fas fa-inbox fa-2x mb-2 opacity-25"></i>
                    <p class="mb-0">Nenhum chamado encontrado.</p>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Coluna de Estatísticas Auxiliares -->
  <div class="col-lg-4">
    <!-- Utilizadores -->
    <div class="card mb-4 border-0 shadow-sm">
      <div class="card-body text-center py-4">
        <div class="display-6 text-primary mb-2">
          <i class="fas fa-users"></i>
        </div>
        <h5 class="fw-bold mb-0">{{stats.usuarios}}</h5>
        <p class="text-muted mb-0 small text-uppercase fw-semibold">Utilizadores
          Ativos</p>
        <hr class="w-25 mx-auto my-3 opacity-25" />
        <a
          href="/usuarios"
          class="btn btn-sm btn-link text-decoration-none"
        >Gerir Utilizadores</a>
      </div>
    </div>

    <!-- Setores -->
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center py-4">
        <div class="display-6 text-secondary mb-2">
          <i class="fas fa-building"></i>
        </div>
        <h5 class="fw-bold mb-0">{{stats.setores}}</h5>
        <p class="text-muted mb-0 small text-uppercase fw-semibold">Setores
          Registados</p>
        <hr class="w-25 mx-auto my-3 opacity-25" />
        <a
          href="/setores"
          class="btn btn-sm btn-link text-decoration-none"
        >Gerir Setores</a>
      </div>
    </div>
  </div>
</div>