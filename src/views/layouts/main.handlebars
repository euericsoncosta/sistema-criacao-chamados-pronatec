<html lang="pt-pt"><head><meta charset="UTF-8" /><meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    /><title>{{title}}
      - Service Desk</title><!-- Bootstrap 5 CSS (Link Oficial Estável) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome (Ícones) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <style>
      :root {
        --primary-blue: #2563eb;
        --secondary-bg: #f1f5f9;
        --card-shadow:
          0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      }

      body {
        background-color: var(--secondary-bg);
        font-family:
          "Segoe UI",
          system-ui,
          -apple-system,
          sans-serif;
        color: #1e293b;
      }

      .navbar {
        background: white !important;
        border-bottom: 1px solid #e2e8f0;
        padding: 0.75rem 0;
      }

      .navbar-brand {
        color: var(--primary-blue) !important;
        font-weight: 800;
        letter-spacing: -0.5px;
      }

      .nav-link {
        color: #64748b !important;
        font-weight: 500;
        transition: all 0.2s;
      }

      .nav-link:hover {
        color: var(--primary-blue) !important;
      }

      .card {
        border: none;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
      }

      .main-container {
        margin-top: 3rem;
        margin-bottom: 3rem;
      }

      .btn-primary {
        background-color: var(--primary-blue);
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
      }

      .btn-warning {
        border-radius: 8px;
        font-weight: 600;
      }

      .alert {
        border: none;
        border-radius: 10px;
        box-shadow: var(--card-shadow);
      }
    </style>
  </head><body><!-- Navegação -->
    <nav class="navbar navbar-expand-lg sticky-top">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="fas fa-layer-group me-2"></i>CHAMADOS PRO
        </a>

        {{#if user}}
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navMain"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navMain">
            <ul class="navbar-nav ms-auto align-items-center">
              <li class="nav-item"><a class="nav-link px-3" href="/"><i
                    class="fas fa-home me-1"
                  ></i>
                  Início</a></li>
              <li class="nav-item"><a class="nav-link px-3" href="/chamados"><i
                    class="fas fa-ticket-alt me-1"
                  ></i>
                  Chamados</a></li>
              <li class="nav-item"><a class="nav-link px-3" href="/setores"><i
                    class="fas fa-building me-1"
                  ></i>
                  Setores</a></li>
              <li class="nav-item"><a
                  class="nav-link px-3 text-primary"
                  href="/usuarios"
                ><i class="fas fa-users me-1"></i> Utilizadores</a></li>

              <li class="nav-item dropdown ms-lg-3">
                <a
                  class="nav-link dropdown-toggle bg-light rounded-pill px-4 py-2 border"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <i class="fas fa-user-circle me-1 text-primary"></i>
                  {{user.nome}}
                </a>
                <ul
                  class="dropdown-menu dropdown-menu-end shadow border-0 mt-2"
                >
                  <li><h6 class="dropdown-header">{{user.cargo}}</h6></li>
                  <li><hr class="dropdown-divider" /></li>
                  <li><a class="dropdown-item text-danger" href="/logout"><i
                        class="fas fa-power-off me-2"
                      ></i>Sair</a></li>
                </ul>
              </li>
            </ul>
          </div>
        {{/if}}
      </div>
    </nav>

    <!-- Content Injected Here -->
    <main class="container main-container">
      {{#if success}}
        <div class="alert alert-success alert-dismissible fade show mb-4">
          <i class="fas fa-check-circle me-2"></i>{{success}}
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
      {{/if}}

      {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show mb-4">
          <i class="fas fa-exclamation-circle me-2"></i>{{error}}
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
      {{/if}}

      {{{body}}}
    </main>

    <!-- JS Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body></html>