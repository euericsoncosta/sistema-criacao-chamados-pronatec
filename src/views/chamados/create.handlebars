<div class="row justify-content-center">
  <div class="col-md-10 col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white py-3 border-bottom">
        <div class="d-flex align-items-center">
          <a href="/chamados" class="btn btn-sm btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
          </a>
          <h4 class="card-title mb-0">
            <i class="fas fa-plus-circle me-2 text-primary"></i>Abrir Novo
            Chamado
          </h4>
        </div>
      </div>

      <div class="card-body p-4">
        <form action="/chamados" method="POST">
          <div class="row">
            <div class="col-md-12 mb-3">
              <label
                for="titulo"
                class="form-label fw-bold text-muted small text-uppercase"
              >
                Título do Incidente / Pedido
              </label>
              <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                  <i class="fas fa-heading"></i>
                </span>
                <input
                  type="text"
                  id="titulo"
                  name="titulo"
                  class="form-control border-start-0 bg-light"
                  placeholder="Resumo do problema (ex: Computador não liga)"
                  required
                  autofocus
                />
              </div>
            </div>

            <div class="col-md-12 mb-3">
              <label
                for="descricao"
                class="form-label fw-bold text-muted small text-uppercase"
              >
                Descrição Detalhada
              </label>
              <textarea
                id="descricao"
                name="descricao"
                class="form-control bg-light"
                rows="4"
                placeholder="Descreva detalhadamente o que está a acontecer..."
                required
              ></textarea>
            </div>

            <div class="col-md-6 mb-3">
              <label
                for="prioridade"
                class="form-label fw-bold text-muted small text-uppercase"
              >
                Nível de Urgência
              </label>
              <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                  <i class="fas fa-exclamation-circle"></i>
                </span>
                <select
                  id="prioridade"
                  name="prioridade"
                  class="form-select border-start-0 bg-light"
                  required
                >
                  <option value="baixa" selected>Baixa - Não impede o trabalho</option>
                  <option value="media">Média - Dificulta o trabalho</option>
                  <option value="alta">Alta - Crítico / Interrupção total</option>
                </select>
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <label
                for="setor_id"
                class="form-label fw-bold text-muted small text-uppercase"
              >
                Setor Responsável
              </label>
              <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                  <i class="fas fa-building"></i>
                </span>
                <select
                  id="setor_id"
                  name="setor_id"
                  class="form-select border-start-0 bg-light"
                  required
                >
                  <option value="" disabled selected>Selecione o setor...</option>
                  {{#each setores}}
                    <option value="{{this.id}}">{{this.nome}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="col-md-12 mb-4">
              <label
                for="cliente_id"
                class="form-label fw-bold text-muted small text-uppercase"
              >
                Utilizador Solicitante
              </label>
              <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                  <i class="fas fa-user"></i>
                </span>
                <select
                  id="cliente_id"
                  name="cliente_id"
                  class="form-select border-start-0 bg-light"
                  required
                >
                  <option value="" disabled selected>Quem está a solicitar o
                    suporte?</option>
                  {{#each clientes}}
                    <option value="{{this.id}}">{{this.nome}}
                      ({{this.email}})</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-text mt-2">
                <i class="fas fa-info-circle me-1"></i>
                Selecione o cliente que reportou o problema.
              </div>
            </div>
          </div>

          <hr class="my-4" />

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/chamados" class="btn btn-light border px-4">
              Cancelar
            </a>
            <button
              type="submit"
              class="btn btn-primary px-5 fw-bold shadow-sm"
            >
              <i class="fas fa-paper-plane me-2"></i>Abrir Chamado
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>