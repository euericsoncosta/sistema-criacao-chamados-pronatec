<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <a href="/chamados" class="btn btn-sm btn-outline-secondary me-3">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h4 class="card-title mb-0">Detalhes do Chamado #{{chamado.id}}</h4>
                </div>
                <div>
                    {{#if (eq chamado.status 'aberto')}}
                        <span class="badge bg-warning text-dark px-3 py-2">Aberto</span>
                    {{else if (eq chamado.status 'em_atendimento')}}
                        <span class="badge bg-info px-3 py-2">Em Atendimento</span>
                    {{else}}
                        <span class="badge bg-success px-3 py-2">Concluído</span>
                    {{/if}}
                </div>
            </div>

            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h3 class="fw-bold mb-1">{{chamado.titulo}}</h3>
                        <p class="text-muted small">Aberto em {{formatDate chamado.created_at}}</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="small text-muted mb-1">Prioridade Atual:</div>
                        <span class="badge {{#if (eq chamado.prioridade 'alta')}}bg-danger{{else if (eq chamado.prioridade 'media')}}bg-primary{{else}}bg-secondary{{/if}}">
                            {{chamado.prioridade}}
                        </span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded border h-100">
                            <label class="small fw-bold text-muted text-uppercase d-block mb-1">Solicitante</label>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle fa-2x text-secondary me-2"></i>
                                <div>
                                    <div class="fw-bold">{{chamado.cliente.nome}}</div>
                                    <div class="small text-muted">{{chamado.cliente.email}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded border h-100">
                            <label class="small fw-bold text-muted text-uppercase d-block mb-1">Setor Responsável</label>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-2">
                                    <i class="fas fa-building"></i>
                                </div>
                                <div class="fw-bold">{{chamado.setor.nome}}</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="small fw-bold text-muted text-uppercase d-block mb-2">Descrição do Problema</label>
                    <div class="p-3 bg-white border rounded" style="white-space: pre-wrap; min-height: 100px;">
                        {{chamado.descricao}}
                    </div>
                </div>

                <hr class="my-4">

                <h5 class="fw-bold mb-3">
                    <i class="fas fa-edit me-2 text-primary"></i>Atualizar Atendimento
                </h5>
                <form action="/chamados/update/{{chamado.id}}" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="status" class="form-label fw-bold">Alterar Status</label>
                            <select id="status" name="status" class="form-select">
                                <option value="aberto" {{#if (eq chamado.status 'aberto')}}selected{{/if}}>
                                    Aberto
                                </option>
                                <option value="em_atendimento" {{#if (eq chamado.status 'em_atendimento')}}selected{{/if}}>
                                    Em Atendimento
                                </option>
                                <option value="concluido" {{#if (eq chamado.status 'concluido')}}selected{{/if}}>
                                    Concluir Chamado
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="prioridade" class="form-label fw-bold">Alterar Prioridade</label>
                            <select id="prioridade" name="prioridade" class="form-select">
                                <option value="baixa" {{#if (eq chamado.prioridade 'baixa')}}selected{{/if}}>Baixa</option>
                                <option value="media" {{#if (eq chamado.prioridade 'media')}}selected{{/if}}>Média</option>
                                <option value="alta" {{#if (eq chamado.prioridade 'alta')}}selected{{/if}}>Alta</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                            <i class="fas fa-save me-2"></i>Guardar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>